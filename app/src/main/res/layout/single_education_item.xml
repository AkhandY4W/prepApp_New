<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight=".9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".99"
                    android:fontFamily="@font/robotobold"
                    android:text="Master in Design, UX Design"
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/text_size_14" />

                <Button
                    android:id="@+id/btn_in_course"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight=".1"
                    android:visibility="gone" />


            </LinearLayout>


            <TextView
                android:id="@+id/txt_college_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/robotoregular"
                android:text="Rishi Bankim CHandra College"
                android:textColor="@color/txt_black_70"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/txt_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/robotoregular"
                android:text="2011-2013"
                android:textColor="@color/txt_black_30"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/txt_achievement_dummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/key_responsibilities"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:fontFamily="@font/robotobold"
                android:text="Achievement"
                android:textColor="@color/txt_black_70"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/txt_achievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/key_achievement_dummy"
                android:layout_marginTop="@dimen/four_dp"
                android:textColor="@color/txt_black"
                android:lineSpacingExtra="2.5dp"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/college_image"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_education" />


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/eight_dp"
        android:background="@color/grey" />
</LinearLayout>