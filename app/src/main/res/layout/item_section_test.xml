<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sixteen_dp"
    android:clickable="true"
    android:clipToPadding="true"
    android:elevation="@dimen/card_elevation"
    android:focusable="true"
    android:id="@+id/card_cat"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp">

        <TextView
            android:id="@+id/txt_cat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/layout_take_test"
            android:fontFamily="@font/robotobold"
            android:text="English"
            android:layout_marginEnd="8dp"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/txt_asp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cat_name"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_toStartOf="@+id/layout_take_test"
            android:text="435555 Aspriants"
            android:textColor="@color/txt_black_70"
            android:textSize="@dimen/text_size_14"
            android:layout_marginEnd="8dp"/>

       <LinearLayout
           android:id="@+id/layout_take_test"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true">
        <TextView
            android:id="@+id/txt_take_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Take Test"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/lock_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock_icon"/>
       </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>