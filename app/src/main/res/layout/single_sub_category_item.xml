<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:clipToPadding="true"
        android:elevation="@dimen/sixteen_dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                android:src="@drawable/category_dummy" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_cat"
                android:background="@color/background2"
                android:orientation="horizontal"
                android:padding="@dimen/sixteen_dp">

                <TextView
                    android:id="@+id/txt_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="SSC CGL TIER 1jkgkfjkdfg "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />

                <Button
                    android:id="@+id/btn_take_test"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/buttoncorner"
                    android:paddingStart="@dimen/twelve_dp"
                    android:paddingRight="@dimen/twelve_dp"
                    android:text="Take Test"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <com.skyhope.showmoretextview.ShowMoreTextView
                    android:id="@+id/txt_about_exam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text=" Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs Government Jobs"
                    android:textColor="@color/text_grey_dark"
                    android:textSize="@dimen/text_size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_asp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="66,227 "
                            android:textColor="@color/text_grey_dark"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:id="@+id/txt_asp_dummy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Tested"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/forum_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/twenty_dp"
                            android:layout_height="@dimen/twenty_dp"
                            android:background="@drawable/ic_forum" />

                        <TextView
                            android:id="@+id/txt_forum_dummy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Forum"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>