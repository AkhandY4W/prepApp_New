<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.vlonjatg.progressactivity.ProgressRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/progress_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activityToolbar"
        progressActivity:emptyBackgroundColor="#fbc02d"
        progressActivity:errorBackgroundColor="#42a5f5"
        progressActivity:loadingBackgroundColor="#FFFFFF"
        tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/summary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:fontFamily="@font/robotobold"
                        android:text="Summary"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />

                    <Button
                        android:id="@+id/btn_summary"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/summary_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:ellipsize="end"
                    android:ems="3"
                    android:fontFamily="@font/robotoregular"
                    android:lineSpacingExtra="2.5dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/text_size_12" />

                <Button
                    android:id="@+id/btn_more_summary"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/assets_01_ic_arrow_down"
                    android:duration="1"
                    android:visibility="gone" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/career_aim_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/career_aim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/robotobold"
                        android:text="Career Aim"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_career_aim"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/career_aim_deatils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:ellipsize="end"
                    android:ems="3"
                    android:lineSpacingExtra="2.5dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/text_size_12" />

                <Button
                    android:id="@+id/career_aim_more_deatils"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/assets_01_ic_arrow_down"
                    android:visibility="gone" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/talent_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="visible">

            <LinearLayout
                android:padding="@dimen/sixteen_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_talent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/robotobold"
                        android:text="Talents"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />

                    <Button
                        android:id="@+id/add_talent"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView

                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:id="@+id/talent_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/education_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Education_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/robotobold"
                        android:text="Education"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12"/>

                    <Button
                        android:id="@+id/add_education_details"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/education_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_work_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/work_experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/robotobold"
                            android:text="Work Experience"
                            android:textAllCaps="true"
                            android:textColor="@color/txt_black_70"
                            android:textSize="@dimen/text_size_12" />

                        <Button
                            android:id="@+id/add_work_experience"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/work_details_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteen_dp" />

                    <Button
                        android:id="@+id/button_for_more_work_detail"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.75"
                        android:background="@drawable/assets_01_ic_arrow_down"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/grey"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/robotobold"
                        android:text="Projects"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />

                    <Button
                        android:id="@+id/add_project"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/project_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="72dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/personal_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:fontFamily="@font/robotobold"
                        android:text="Personal Details"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_personal_details"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="Email :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/email_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.60"
                        android:text="youth4work@gmail.com"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="Phone No. :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.60"
                        android:gravity="center_vertical"
                        android:text="9856744021"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="Date of Birth :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/DOB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.60"
                        android:text="May 13,1995"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="Gender :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.60"
                        android:text="Male"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:text="Marital Status :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/marital_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.60"
                        android:text="Single"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="Address :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.72"
                        android:text="string/address"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="Pin Code :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/pin_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/four_dp"
                        android:layout_weight="0.72"
                        android:text="110095"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_resume_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_resume_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="Resume :"
                        android:textColor="@color/txt_black_70"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_resume"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="0.72"
                        android:textSize="@dimen/text_size_12"
                        android:background="@drawable/blue_border"
                        android:drawablePadding="@dimen/eight_dp"
                        android:paddingLeft="32dp"
                        android:paddingRight="32dp"
                        android:text="See Resume"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </com.vlonjatg.progressactivity.ProgressRelativeLayout>
</androidx.core.widget.NestedScrollView>