<?xml version="1.0" encoding="utf-8"?>
<com.vlonjatg.progressactivity.ProgressRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/progress_activiity"
    tools:context=".ui.home.ChatActivity">

    <RelativeLayout
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/eight_dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_centerVertical="true"
            android:background="@drawable/md_nav_back"/>

        <LinearLayout
            android:layout_toEndOf="@+id/btn_back"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Attempted Prep Test"
                android:textColor="@color/txt_white_70"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:textColor="@color/txt_white"
                android:id="@+id/txt_sub_cat_name"
                android:ems="3"
                android:maxLines="1"
                android:textSize="@dimen/text_size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat " />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp"
        android:layout_below="@+id/custom_toolbar">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:elevation="@dimen/sixteen_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sub_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/category_dummy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/twelve_dp">

                <TextView
                    android:id="@+id/txt_partent_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Goverment Jobs"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text_grey"/>

                <TextView
                    android:id="@+id/txt_sub_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="Common Admission Test(CAT)"
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/img_user"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:background="@drawable/circular_bordershape"
                            android:src="@drawable/ic_user_default" />

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/img_user1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="28dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:background="@drawable/circular_bordershape"
                            android:src="@drawable/ic_user_default" />

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/img_user2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="56dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:background="@drawable/circular_bordershape"
                            android:src="@drawable/ic_user_default" />

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/img_user3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="84dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:background="@drawable/circular_bordershape"
                            android:src="@drawable/ic_user_default" />
                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/img_user4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="112dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:background="@drawable/circular_bordershape"
                            android:src="@drawable/ic_user_default" />


                    </FrameLayout>

                    <TextView
                        android:id="@+id/txt_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_forum_blue"
                        android:text="CHAT NOW"
                        android:gravity="center"
                        android:drawablePadding="@dimen/five_dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:padding="@dimen/eight_dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_sub_cat_attempt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginTop="6dp"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text_grey"
                    android:text="+46,956 Students Attempted" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chat_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentStart="true"/>

    </RelativeLayout>
</com.vlonjatg.progressactivity.ProgressRelativeLayout>