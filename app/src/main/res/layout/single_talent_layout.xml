<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clipToPadding="true"
    android:elevation="@dimen/eight_dp"
    app:cardCornerRadius="@dimen/four_dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_talent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_weight="1"
                android:fontFamily="@font/robotobold"
                android:text="Core Java"
                android:textColor="@color/txt_black_70"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/txt_city_rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/txt_talent"
                android:layout_toRightOf="@+id/txt_talent"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="118/20747 yRank In Delhi"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear"
            android:layout_marginTop="@dimen/eight_dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/eight_dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_yscore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/four_dp"
                android:gravity="center"
                android:text="52.5 yScore"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_size_12" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_marginRight="@dimen/four_dp"
                android:background="@color/grey" />


            <TextView
                android:id="@+id/txt_reputation_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/four_dp"
                android:gravity="center"
                android:text="525 yRepo"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_size_12" />

            <View
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_marginRight="@dimen/four_dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/txt_global_yrank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/four_dp"
                android:gravity="center"
                android:text="525/1302654 yRank"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>