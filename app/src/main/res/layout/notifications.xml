<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_elevation"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_banner" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageView"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:fontFamily="@font/robotobold"
                android:maxLength="25"
                android:maxLines="1"
                android:text="Microsoft India Pvt ltd. klfdzjklffjkl"
                android:textColor="@color/txt_black_70"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_black_30"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 minutes ago" />

        </LinearLayout>


        <TextView
            android:id="@+id/company"
            android:fontFamily="@font/robotoregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignStart="@+id/view"
            android:layout_alignLeft="@+id/view"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/txt_black_70"
            android:textSize="@dimen/text_size_12"
            android:layout_toEndOf="@+id/imageView"
            android:text="Simple dummy text" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>